

<% if @errors.present? %>
  <ul>
    <% @errors.each do |error| %>
      <li>
        <%= error %>
      </li>
    <% end %> 
  </ul>
<% end %>

<%= display_flash_message %>



<%= form_for @concert do |f|%>

  <div class="new_concert_form">
    <%= f.label :date %>
    <%= f.date_field :date %> 

    <%= f.label :band %>
    <%= f.text_field :band %> 

    <%= f.label :venue %>
    <%= f.text_field :venue %> 
    
    <%= f.label :city %>
    <%= f.text_field :city %> 
   
    <%= f.label :price %>
    <%= f.text_field :price %> 

    <%= f.label :description %>
    <%= f.text_area :description %> 
  </div>

  <div class='create_concert_button'>
    <%= f.submit "Add the concert and rock'n roll!!!" %>
  </div>


  

<% end %>

<br>
<%= link_to 'Back to the list of concerts for today', front_page_path %>